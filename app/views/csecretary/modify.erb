<div data-role="header">
  <a href="/csecretary/relay" class="ui-btn ui-corner-all ui-shadow ui-icon-home ui-btn-icon-left" style="margin: 3px;">홈</a>
  <p style="font-size: 20px; text-align: center; margin-top: 10px"><strong>커뮤니티 게시판</strong><p>
</div>
<form class="form-horizontal"  style="margin-left: 6px; margin-right: 6px" action="/csecretary/update/<%= @one_post.id %>" enctype="multipart/form-data" method="POST">
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">제목</label>
    <div class="col-sm-10">
      <input readonly type="text" name="title" class="form-control" id="inputTitle" value="<%= @one_post.post_title %>">
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">글쓴이</label>
    <div class="col-sm-10">
      <input readonly type="text" name="new_name" class="form-control" value="<%= @one_post.post_name %>">
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">내용</label>
    <div class="col-sm-10">
      <textarea name="new_content"><%= @one_post.post_content %></textarea>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">비밀번호</label>
    <div class="col-sm-10">
      <input type="password" name="confirm_password" class="form-control"placeholder="게시물을 수정, 삭제할 때 필요합니다.">
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-6">
      <button class="ui-btn ui-corner-all ui-shadow ui-icon-home" type="submit">수정하기</button>
    </div>
    <div class="col-xs-6">
      <a href="/csecretary/read/<%= @one_post.id %>" class="ui-btn ui-corner-all ui-shadow ui-icon-home">취소하기</a>
    </div>
  </div>
</form>