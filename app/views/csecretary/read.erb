<div class="container">
  <div data-role="header" style="margin-bottom: 15px; padding: 5px;">
    <a href="/" class="ui-btn ui-corner-all ui-shadow ui-icon-home ui-btn-icon-left">홈</a>
    <h1>자유게시판</h1>
  </div>
  <div>
    <div class="panel panel-default">
      <div class="panel-body">
        제목 : <%= @one_post.post_title %><div style="float: right">글쓴이 : <%= @one_post.post_name %></div>
        <hr>
        <%= @one_post.post_content %>
      </div>
    </div>
    <div style="float: right">
      <a class="btn btn-default" href="/csecretary/delete/<%= @one_post.id %>" role="button">삭제</a>
      <a class="btn btn-default" href="/csecretary/modify/<%= @one_post.id %>" role="button">수정</a>
    </div><br>
    <hr>
    <div class="panel panel-default">
      <div class="panel-body">
        Comments '<span id="replyCount"><%= @one_post.replies.size %></span>'
      </div>
    </div>
    <div class="replies_content">
      <% @one_post.replies.each do |r| %>
      <h5 style="margin-left: 20px;"><%= r.reply_content %></h5>
      <hr>
      <% end %>
    </div>
        <div class="well">
      댓글달기
          <input type="hidden" name="post_id" value="<%= @one_post.id %>">
          <textarea name="reply_content" id="replyContent"></textarea>
          <input type="submit" value="등록" id="replySubmit" class="ui-btn ui-corner-all ui-shadow ui-icon-home" style="float: right">
          <br>
          <br>
    </div>
    <div>
        <a href="/" class="ui-btn ui-corner-all ui-shadow ui-icon-home">뒤로가기</a>
    </div>
  </div>
</div>

<script>
  $(function(){
    $("#replySubmit").click(function(){
        $.ajax({
          method: "POST",
          url: "/csecretary/write_reply",
          data: { post_id: <%= @one_post.id %>, reply_content: $("#replyContent").val()
          },
            success: function(){
              var reply_txt = $("#replyContent").val();
              var replycount = parseInt($( "#replyCount" ).text());
              $( ".replies_content" ).append( "<h5 style=\"margin-left: 20px;\">" + reply_txt + "</h5>" + "<hr>" );
              $( "#replyCount" ).text(replycount + 1);
              $( "#replyContent" ).val('');
            }
          });
      });
  });
</script>